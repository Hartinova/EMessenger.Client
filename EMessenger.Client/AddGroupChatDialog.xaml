<Window x:Class="EMessenger.Client.Views.AddGroupChatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить групповой чат"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="0" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Label Content="Имя чата:" Grid.Row="0" Grid.Column="0" />
        <TextBox x:Name="ChatNameTextBox" Grid.Row="0" Grid.Column="1" KeyDown="ChatNameTextBox_KeyDown" />

        <Button Content="ОК" Grid.Row="1" Grid.Column="0" Click="OkButton_Click" />
        <Button Content="Отмена" Grid.Row="1" Grid.Column="1" Click="CancelButton_Click" />
    </Grid>
</Window>
